  "devDependencies": {
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.3.1",
    "mongodb-memory-server": "^8.0.4",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6"
