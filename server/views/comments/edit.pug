extends ../layouts/application.pug

block content
  h1 Edit comment
  form(action=`/topics/${comment.topic.id}/comments/${comment.id}?_method=PATCH` method='post')
    div
      textarea(name='body' cols=70 rows=15)= form.body
      if errors.body
        p= errors.body
    input(type='submit' value='Save changes')